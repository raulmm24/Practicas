<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="900" prefHeight="600"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.TrabajadorController">

    <children>

        <!-- CONTENEDOR PRINCIPAL -->
        <VBox spacing="30" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <!-- BUSCADOR -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <children>
                    <TextField fx:id="txtBuscar" promptText="Buscar empleado por nombre..."
                               prefWidth="250">
                        <HBox.margin>
                            <Insets left="20"/>
                        </HBox.margin>
                    </TextField>

                    <Button text="Buscar" fx:id="btnBuscar"
                            style="-fx-background-color: #5DADE2; -fx-text-fill: white; -fx-padding: 6 20;"/>
                </children>
            </HBox>


            <!-- TARJETA DE INFORMACIÓN -->
            <VBox spacing="20" prefWidth="600"
                  style="-fx-background-color: white; -fx-padding: 30;
                         -fx-background-radius: 12;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 4);">

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="350"/>
                    </columnConstraints>

                    <!-- Nombre -->
                    <Label text="Nombre:"/>
                    <TextField fx:id="txtNombre" editable="false"
                               style="-fx-background-color: #F2F3F4;"
                               GridPane.columnIndex="1"/>

                    <!-- Departamento -->
                    <Label text="Departamento:" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtDepartamento" editable="false"
                               style="-fx-background-color: #F2F3F4;"
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <!-- Valoración -->
                    <Label text="Valoración:" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtValoracion" editable="false"
                               style="-fx-background-color: #F2F3F4;"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <!-- Nota -->
                    <Label text="Nota del supervisor:" GridPane.rowIndex="3"/>
                    <TextArea fx:id="txtNota" editable="false"
                              prefRowCount="4"
                              style="-fx-background-color: #F2F3F4;"
                              GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>

            </VBox>

            <!-- BOTÓN VOLVER -->
            <Button fx:id="btnVolver" text="Volver al menú"
                    style="-fx-background-color: #AEB6BF; -fx-font-weight: bold;
                           -fx-padding: 10 30; -fx-background-radius: 8;"/>
        </VBox>

    </children>

</AnchorPane>
