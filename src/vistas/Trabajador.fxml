<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.TrabajadorController"
            stylesheets="@../estilo/trabajador.css"
            styleClass="data-background" prefWidth="900" prefHeight="650">

    <VBox spacing="25" alignment="TOP_CENTER" styleClass="glass-panel"
          AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

        <Label text="Perfil del Trabajador" styleClass="titulo"/>

        <HBox spacing="15" alignment="CENTER">
            <TextField fx:id="txtBuscar" promptText="Ingrese su nombre..." prefWidth="300"
                       style="-fx-background-radius: 20; -fx-padding: 10;"/>
            <Button fx:id="btnBuscar" text="Consultar" styleClass="button-primary"/>
        </HBox>

        <ScrollPane fx:id="scrollResultados" fitToWidth="true"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox fx:id="contenedorResultados" spacing="15" style="-fx-padding: 10;"/>
        </ScrollPane>

        <Button fx:id="btnVolver" text="Volver al Inicio" prefWidth="200" styleClass="button-ghost"/>
    </VBox>
</AnchorPane>