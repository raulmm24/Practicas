<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600" prefHeight="400">

    <children>

        <VBox spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <HBox alignment="CENTER">
                <children>
                    <Label text="Empleado" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                </children>
            </HBox>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150"/>
                    <ColumnConstraints prefWidth="300"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints prefHeight="30"/>
                    <RowConstraints prefHeight="30"/>
                    <RowConstraints prefHeight="30"/>
                    <RowConstraints prefHeight="100"/>
                </rowConstraints>

                <children>
                    <Label text="Nombre"/>
                    <TextField fx:id="txtNombre" GridPane.columnIndex="1" editable="false"/>

                    <Label text="Departamento" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtDepartamento" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"/>

                    <Label text="ValoraciÃ³n" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtValoracion" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>

                    <Label text="Nota del supervisor" GridPane.rowIndex="3"/>
                    <TextArea fx:id="txtNota" GridPane.columnIndex="1" GridPane.rowIndex="3" editable="false"/>
                </children>
            </GridPane>

        </VBox>

    </children>

</AnchorPane>
