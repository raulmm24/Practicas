<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.TrabajadorController"
            prefWidth="650" prefHeight="500">

    <children>

        <VBox spacing="25" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <!-- ENCABEZADO -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Ficha del Empleado"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- TARJETA DE INFORMACIÓN -->
            <VBox spacing="15" style="-fx-background-color: #F4F6F7; -fx-padding: 20; -fx-background-radius: 10;">

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="180"/>
                        <ColumnConstraints prefWidth="350"/>
                    </columnConstraints>

                    <!-- Nombre -->
                    <Label text="Nombre" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextField fx:id="txtNombre" GridPane.columnIndex="1"
                               editable="false"
                               style="-fx-background-color: #EAECEE; -fx-border-radius: 5; -fx-background-radius: 5;"/>

                    <!-- Departamento -->
                    <Label text="Departamento" GridPane.rowIndex="1" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextField fx:id="txtDepartamento" GridPane.columnIndex="1" GridPane.rowIndex="1"
                               editable="false"
                               style="-fx-background-color: #EAECEE; -fx-border-radius: 5; -fx-background-radius: 5;"/>

                    <!-- Valoración -->
                    <Label text="Valoración" GridPane.rowIndex="2" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextField fx:id="txtValoracion" GridPane.columnIndex="1" GridPane.rowIndex="2"
                               editable="false"
                               style="-fx-background-color: #EAECEE; -fx-border-radius: 5; -fx-background-radius: 5;"/>

                    <!-- Nota -->
                    <Label text="Nota del supervisor" GridPane.rowIndex="3" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextArea fx:id="txtNota" GridPane.columnIndex="1" GridPane.rowIndex="3"
                              editable="false"
                              wrapText="true"
                              style="-fx-background-color: #EAECEE; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                </GridPane>

            </VBox>

            <!-- BOTÓNES -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="btnCerrar" text="Cerrar ventana"
                        style="-fx-background-color: #D5D8DC; -fx-font-weight: bold; -fx-padding: 8 16;"/>

                <Button fx:id="btnVolver" text="Volver al menú"
                        style="-fx-background-color: #AEB6BF; -fx-font-weight: bold; -fx-padding: 8 16;"/>
            </HBox>

        </VBox>

    </children>

</AnchorPane>
