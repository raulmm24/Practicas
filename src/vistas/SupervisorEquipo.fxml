<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controladores.SupervisorEquipoController"
            prefWidth="800" prefHeight="550">

    <!-- TÍTULO -->
    <Label text="Gestión de Equipo" layoutX="30" layoutY="20"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- COMBO DEPARTAMENTOS -->
    <Label text="Departamento:" layoutX="30" layoutY="80"
           style="-fx-font-size: 14px;"/>
    <ComboBox fx:id="comboDepartamento" layoutX="140" layoutY="75"
              prefWidth="200"/>

    <Button fx:id="btnCargar" text="Cargar" layoutX="360" layoutY="75"
            prefWidth="100"/>

    <!-- TABLA -->
    <TableView fx:id="tablaEquipo" layoutX="30" layoutY="120"
               prefWidth="740" prefHeight="350">

        <columns>

            <!-- Selección -->
            <TableColumn fx:id="colSeleccion" text="✓" prefWidth="50"/>

            <!-- Nombre -->
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>

            <!-- Departamento -->
            <TableColumn fx:id="colDepartamento" text="Departamento" prefWidth="150"/>

            <!-- Supervisor (NUEVO) -->
            <TableColumn fx:id="colSupervisor" text="Supervisor" prefWidth="150"/>

            <!-- Valoración -->
            <TableColumn fx:id="colValoracion" text="Valoración" prefWidth="100"/>

            <!-- Nota -->
            <TableColumn fx:id="colNota" text="Nota" prefWidth="250"/>

        </columns>

    </TableView>

    <!-- BOTONES ABAJO -->
    <Button fx:id="btnGuardar" text="Guardar Cambios"
            layoutX="30" layoutY="490" prefWidth="200"/>

    <Button fx:id="btnVolver" text="Volver"
            layoutX="650" layoutY="490" prefWidth="120"/>

</AnchorPane>
