<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.SupervisorEquipoController"
            stylesheets="@../estilo/supervisor.css"
            styleClass="data-background"
            prefWidth="1300" prefHeight="750">

    <!-- HEADER SUPERIOR -->
    <HBox spacing="20"
          alignment="CENTER_LEFT"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="30"
          AnchorPane.rightAnchor="30">

        <!-- TÍTULO -->
        <Label text="Gestión del Equipo" styleClass="titulo-visual"/>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- BUSCADOR -->
        <TextField fx:id="txtBuscar" promptText="Buscar trabajador..." prefWidth="220"/>

        <!-- COMBO + ACCIONES -->
        <ComboBox fx:id="comboDepartamento" prefWidth="220" styleClass="combo-box"/>
        <Button fx:id="btnCargar" text="Cargar" styleClass="button"/>
        <Button fx:id="btnAñadir" text="Añadir" styleClass="button-primary"/>
        <Button fx:id="btnTogglePanel" text="Panel" styleClass="button-ghost"/>
    </HBox>

    <!-- CONTENIDO CENTRAL: SPLITPANE -->
    <SplitPane orientation="HORIZONTAL"
               AnchorPane.topAnchor="80"
               AnchorPane.leftAnchor="30"
               AnchorPane.rightAnchor="30"
               AnchorPane.bottomAnchor="80">

        <!-- LADO IZQUIERDO: GRID DE TARJETAS -->
        <ScrollPane fitToWidth="true" styleClass="scroll-area">
            <GridPane fx:id="gridTrabajadores"
                      hgap="25" vgap="25"
                      styleClass="grid-container"
                      alignment="TOP_LEFT"/>
        </ScrollPane>

        <!-- LADO DERECHO: PANEL LATERAL GESTIÓN -->
        <VBox fx:id="panelLateral"
              spacing="10"
              styleClass="panel-lateral">

            <Label text="Gestión de trabajadores" styleClass="panel-titulo"/>

            <Label text="Trabajadores del departamento:" styleClass="panel-subtitulo"/>

            <ListView fx:id="listaTrabajadoresPanel" styleClass="list-view"/>

            <Button fx:id="btnEliminarSeleccionado" text="Eliminar seleccionado" styleClass="button-danger"/>

        </VBox>

    </SplitPane>

    <!-- FOOTER -->
    <HBox spacing="16"
          alignment="CENTER_RIGHT"
          AnchorPane.bottomAnchor="24"
          AnchorPane.rightAnchor="30">

        <Button fx:id="btnGuardar" text="Guardar cambios" styleClass="button-primary"/>
        <Button fx:id="btnVolver" text="⏻ Salir" styleClass="button-ghost"/>
    </HBox>

</AnchorPane>
