<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.HistorialValoracionesController">

    <!-- CABECERA -->
    <top>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Historial de Valoraciones"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Trabajador:"/>
                <ComboBox fx:id="comboTrabajadores" prefWidth="250"/>
                <Button fx:id="btnCargar" text="Cargar historial"/>
            </HBox>
        </VBox>
    </top>

    <!-- TABLA CENTRAL -->
    <center>
        <TableView fx:id="tablaHistorial" style="-fx-padding: 15;">
            <columns>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150"/>
                <TableColumn fx:id="colValoracionAnterior" text="Valoración Anterior" prefWidth="150"/>
                <TableColumn fx:id="colValoracionNueva" text="Valoración Nueva" prefWidth="150"/>
                <TableColumn fx:id="colNotaAnterior" text="Nota Anterior" prefWidth="250"/>
                <TableColumn fx:id="colNotaNueva" text="Nota Nueva" prefWidth="250"/>
                <TableColumn fx:id="colSupervisor" text="Supervisor" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <!-- PIE -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
            <Button fx:id="btnVolver" text="Volver" prefWidth="150"/>
        </HBox>
    </bottom>

</BorderPane>
