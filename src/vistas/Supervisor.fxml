<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.SupervisorController"
            prefWidth="800" prefHeight="600">

    <children>

        <VBox spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <HBox alignment="CENTER">
                <Label text="Supervisor"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </HBox>

            <VBox spacing="10">
                <Label text="Mi equipo:" style="-fx-font-size: 16px;"/>

                <TableView fx:id="tablaEquipo" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                        <TableColumn fx:id="colDepartamento" text="Departamento" prefWidth="150"/>
                        <TableColumn fx:id="colValoracion" text="Valoración" prefWidth="100"/>
                        <TableColumn fx:id="colNota" text="Nota" prefWidth="250"/>
                    </columns>
                </TableView>
            </VBox>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150"/>
                    <ColumnConstraints prefWidth="350"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints prefHeight="30"/>
                    <RowConstraints prefHeight="30"/>
                    <RowConstraints prefHeight="30"/>
                    <RowConstraints prefHeight="100"/>
                </rowConstraints>

                <children>
                    <Label text="Nombre"/>
                    <TextField fx:id="txtNombre" editable="false" GridPane.columnIndex="1"/>

                    <Label text="Departamento" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtDepartamento" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Valoración" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtValoracion" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Nota para el trabajador" GridPane.rowIndex="3"/>
                    <TextArea fx:id="txtNota" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </children>
            </GridPane>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnVerFicha" text="Ver ficha del empleado"
                        style="-fx-background-color: #D5D8DC; -fx-font-weight: bold; -fx-padding: 8 16;"/>

                <Button fx:id="btnVolver" text="Volver al menú"
                        style="-fx-background-color: #AEB6BF; -fx-font-weight: bold; -fx-padding: 8 16;"/>
            </HBox>

        </VBox>

    </children>

</AnchorPane>
