<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.SupervisorController">

    <children>

        <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <!-- TÍTULO -->
            <HBox alignment="CENTER">
                <Label text="Panel del Supervisor"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- TABLA DE TRABAJADORES -->
            <VBox spacing="10">
                <Label text="Mi equipo:" style="-fx-font-size: 16px;"/>

                <TableView fx:id="tablaEquipo" prefHeight="250">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                        <TableColumn fx:id="colDepartamento" text="Departamento" prefWidth="150"/>
                        <TableColumn fx:id="colValoracion" text="Valoración" prefWidth="100"/>
                        <TableColumn fx:id="colNota" text="Nota" prefWidth="300"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- PANEL DE EDICIÓN -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150"/>
                    <ColumnConstraints prefWidth="350"/>
                </columnConstraints>

                <children>

                    <!-- Nombre -->
                    <Label text="Nombre"/>
                    <TextField fx:id="txtNombre" editable="false" GridPane.columnIndex="1"/>

                    <!-- Departamento -->
                    <Label text="Departamento" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtDepartamento" editable="false"
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <!-- Valoración -->
                    <Label text="Valoración" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtValoracion" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <!-- Nota -->
                    <Label text="Nota del trabajador" GridPane.rowIndex="3"/>
                    <TextArea fx:id="txtNota" GridPane.columnIndex="1" GridPane.rowIndex="3"
                              prefHeight="100" wrapText="true"/>

                </children>
            </GridPane>

            <!-- BOTONES -->
            <HBox alignment="CENTER" spacing="15">

                <Button fx:id="btnVerFicha" text="Ver ficha"
                        style="-fx-background-color: #5DADE2; -fx-text-fill: white; -fx-padding: 8 16;"/>

                <Button fx:id="btnGuardar" text="Guardar cambios"
                        style="-fx-background-color: #58D68D; -fx-text-fill: white; -fx-padding: 8 16;"/>

                <Button fx:id="btnVolver" text="Volver al menú"
                        style="-fx-background-color: #AEB6BF; -fx-font-weight: bold; -fx-padding: 8 16;"/>

            </HBox>

        </VBox>

    </children>

</AnchorPane>
